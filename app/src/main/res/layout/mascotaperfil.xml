<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilMascota"
    android:layout_height="150dp"
    android:layout_width="150dp"
    android:layout_marginBottom="16dp"
    card_view:cardElevation="@dimen/elevacionCardView">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/paddingCardV">
        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/imgperro"
            android:elevation="@dimen/elevation_nivel4"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:baselineAligned="true">
                <TextView
                    android:id="@+id/tvRankingPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_gravity="top"
                    android:textSize="@dimen/textSize"/>
                <ImageView
                    android:id="@+id/btnRankinPerfil"
                    android:layout_height="@dimen/heightImagen"
                    android:layout_width="@dimen/heightImagen"
                    android:background="@drawable/huesoamarillo">
                </ImageView>
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
